{{#each posts as |post| }}
  <article class="post">
    <div class="card-header dashboard-post">
      <h2 class="card-title post-title"><a class="link" href="/post/{{post.id}}">{{post.title}}</a></h2>
    </div>
    <div class="card-body post-body">
      <p class="card-body post-content">{{post.content}}</p>
      <p class="card-text post-author">Posted by <span class="post-username">{{post.user.username}}</span> on {{format_date post.createdAt}}</p>
    </div>
  </article>
{{/each}}
